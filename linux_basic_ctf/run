#!/bin/zsh

echo -n "Video ochilsinmi? (yes/no): "
read javob

if [[ "$javob" == "yes" || "$javob" == "y" || "$javob" == "Y" || "$javob" == "Yes" ]]; then
    echo "Video ochilmoqda..."
    # Video ochish (OSga qarab o'zgartiriladi)
    if command -v xdg-open > /dev/null; then
        xdg-open video.mp4
    elif command -v open > /dev/null; then
        open video.mp4
    elif command -v start > /dev/null; then
        start video.mp4
    else
        echo "Video ochish uchun dastur topilmadi."
    fi

    echo "Videoni tugashini kuting..."
    sleep 10 # kerak bo‘lsa o‘rniga `wait` qo‘shish mumkin

    # Agar siz video ochilgandan keyin kutishni xohlasangiz bu yerda to‘xtab turishni sozlang
    read -p "Video tugadimi? (Enter bosing): "
fi

# Python faylni ishga tushurish
echo "python main.py ishga tushmoqda..."
python main.py
